<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.telecorp.dashqueue.ui.main.MainActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchview_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="@android:string/search_go"
        app:defaultQueryHint="@android:string/search_go" />

    <com.telecorp.dashqueue.custom.CustomSwipeRefreshLayout
        android:id="@+id/swiperefreshlayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.telecorp.dashqueue.custom.CustomSwipeRefreshLayout>


</LinearLayout>
